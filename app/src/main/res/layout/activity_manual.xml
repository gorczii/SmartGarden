<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_manual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="pl.lodz.p.smartgarden.ManualActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2"
            android:layout_above="@+id/lightButton" android:layout_toRightOf="@+id/currentFlowerTextView"
            android:layout_toEndOf="@+id/currentFlowerTextView" android:layout_marginBottom="212dp"/>
    <TextView
            android:text="Flower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentFlowerTextView" android:textSize="65sp" android:fontFamily="cursive"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:text="LIGHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/light2TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:fontFamily="sans-serif-condensed" android:textSize="36sp" android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_marginBottom="31dp"
            android:layout_above="@+id/water2TextView" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="WATER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/water2TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:textStyle="normal|bold"
            android:fontFamily="sans-serif-condensed" android:textSize="36sp"
            android:layout_marginBottom="75dp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/light2TextView"
            android:layout_alignStart="@+id/light2TextView"/>
    <TextView
            android:text="MANUAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textManual"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:textSize="36sp"
            android:textStyle="normal|bold" android:textColor="#336633"
            android:fontFamily="serif"
            android:layout_marginBottom="51dp" android:layout_above="@+id/light2TextView"
            android:layout_centerHorizontal="true"/>
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waterButton"
            android:layout_alignTop="@+id/light2TextView" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginRight="43dp" android:layout_marginEnd="43dp"/>
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lightButton"
            android:layout_alignBaseline="@+id/water2TextView" android:layout_alignBottom="@+id/water2TextView"
            android:layout_alignLeft="@+id/waterButton" android:layout_alignStart="@+id/waterButton"/>
</RelativeLayout>
