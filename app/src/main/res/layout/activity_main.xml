<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="pl.lodz.p.smartgarden.MainActivity">

    <!-- android:onClick="goToModelActivity" -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/nameTextView"
            android:layout_marginTop="32dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:fontFamily="cursive" android:textSize="65sp"/>
    <TextView
            android:text="@string/chooseFlower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flowerTextView"
            android:layout_below="@+id/nameTextView" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="29dp"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:fontFamily="cursive"
            android:textSize="24sp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flowerSpinner"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/flowerTextView" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:text="@string/chooseMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modeTextView"
            android:layout_below="@+id/flowerSpinner" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="42dp" android:textSize="24sp"
            android:fontFamily="cursive"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modeSpinner"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/modeTextView" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <Button
            android:text="@string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/okButton"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="26dp" android:layout_marginStart="26dp"
            android:layout_marginBottom="43dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            android:layout_below="@+id/modeSpinner" android:layout_toRightOf="@+id/okButton"
            android:layout_toEndOf="@+id/okButton" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"/>
</RelativeLayout>
